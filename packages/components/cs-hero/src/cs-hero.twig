<div class="cs-hero cs-hero--truncated-siblings">
    <div class="cs-hero__carousel">
        <div class="cs-hero__wrapper">
            <ul class="cs-hero__slides">

                {% set idx = 1 %}

                {% for i in 1..slides %}

                    <li class="cs-hero__slide">
                        <figure class="cs-hero__figure">
                            <img class="cs-hero__image" src="../images/hero{{ idx }}.jpg" alt="Hero image {{ idx }}">
                        </figure>
                        <div class="cs-hero__content-wrapper cs-hero__content-wrapper--top">
                            <div class="cs-hero__content">
                                <h2 class="cs-hero__headline">10% OFF</h2>
                                <p class="cs-hero__text">Baby Kleidung</p>
                                <div class="cs-hero__cta">
                                    <a href="#" class="ppn-button ppn-button--primary">Check offer</a>
                                </div>
                            </div>
                        </div>
                    </li>
                    
                    {% set idx = idx + 1 %}
                    {% if idx == 4 %} 
                        {% set idx = 1 %}
                    {% endif %}
                {% endfor %}
            </ul>

            <button class="cs-hero__nav cs-hero__nav--large cs-hero__nav--prev" type="button">
                <svg class="cs-hero__nav-icon">
                    <use xlink:href="../images/sprites.svg#icon_arrow-left"></use>
                </svg>
            </button>
            <button class="cs-hero__nav cs-hero__nav--large cs-hero__nav--next" type="button">
                <svg class="cs-hero__nav-icon">
                    <use xlink:href="../images/sprites.svg#icon_arrow-right"></use>
                </svg>
            </button>
        </div>

        
        <ul class="cs-hero__pagination"></ul>
        <!-- If you only want dot pagination you can remove numbers pagination below -->
        <div class="cs-hero__numbers">
            <span class="cs-hero__number cs-hero__number--current"></span>
            /
            <span class="cs-hero__number cs-hero__number--total" data-cs-hero-total="{{ slides }}"></span>
        </div>
    </div>
</div>

