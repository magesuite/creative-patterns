<button class="action-button{% if mix %} {{ mix }} {% endif %}"{% if state %} {{ state }}{% endif %}>
    {% if icon %}
        <svg class="action-button__icon action-button__icon--{{ icon }}"><use xlink:href="/images/sprites.svg#icon_{{ icon }}"></use></svg>
    {% endif %}

    {% if text %}
        {{ text }}
    {% endif %}
</button>
