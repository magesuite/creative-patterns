<!doctype html>
<html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>{{ title }}</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="../action-button.css">
    </head>
    <body>
        <main>
            <p>
                default:<br>
                {% include '../action-button.twig' with {
                    'text': 'Example'
                } %}
            </p>

            <p>
                default with icon:<br>
                {% include '../action-button.twig' with {
                    'text': 'Edit',
                    'icon': 'edit'
                } %}
            </p>

            <p>
                .action-button--tool:<br>
                {% include '../action-button.twig' with {
                    'mix': 'action-button--tool',
                    'icon': 'arrow-up'
                } %}

                {% include '../action-button.twig' with {
                    'mix': 'action-button--tool',
                    'icon': 'arrow-down'
                } %}

                {% include '../action-button.twig' with {
                    'mix': 'action-button--tool',
                    'icon': 'settings'
                } %}

                {% include '../action-button.twig' with {
                    'mix': 'action-button--tool',
                    'icon': 'edit'
                } %}
            </p>

            <p>
                .action-button--tool - disabled:<br>
                {% include '../action-button.twig' with {
                    'mix': 'action-button--tool action-button--disabled',
                    'icon': 'arrow-up',
                    'state': 'disabled'
                } %}
            </p>

            <p>
                .action-button--tool .action-button--warning:<br>
                {% include '../action-button.twig' with {
                    'mix': 'action-button--tool action-button--warning',
                    'icon': 'trash-can'
                } %}
            </p>

            <p>
                .action-button--tool .action-button--important:<br>
                {% include '../action-button.twig' with {
                    'mix': 'action-button--tool action-button--important',
                    'icon': 'plus'
                } %}
            </p>

            <p>
                .action-button--primary:<br>
                {% include '../action-button.twig' with {
                    'text': 'Example',
                    'mix': 'action-button--primary'
                } %}
            </p>

            <p>
                .action-button--primary with icon:<br>
                {% include '../action-button.twig' with {
                    'text': 'Edit',
                    'mix': 'action-button--primary',
                    'icon': 'edit'
                } %}
            </p>
        </main>
    </body>
</html>
