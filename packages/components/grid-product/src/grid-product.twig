<div class="{{ namespace }}grid-product {{ productClasses }}">

    <a href="{{ product.url }}" class="{{ namespace }}grid-product__link" tabindex="-1">
        <figure class="{{ namespace }}grid-product__figure">
            <img class="{{ namespace }}grid-product__image {{ product.image.classes }} {{ product.image.mixins }}" src="{{ image.src }}" alt="{{ product.image.alt }}" title="{{ product.image.title }}">
        </figure>

        <!--Badges - logic must be implement-->
        <div class="{{ namespace }}grid-product__badge-wrapper">
            {{ badgesHtml }}
        </div>


        <div class="{{ namespace }}grid-product__name">
            {{ nameHtml }}
        </div>

        <div class="{{ namespace }}grid-product__description">
            <div class="{{ namespace }}grid-product__price | {{ price.mixins }}">
                {{ price.html }}
            </div>
        </div>
    </a>


    {% if showComment %}
        <div class="{{ namespace }}grid-product__comment {{ commentClasses }} {{ commentMixins }}">
            {{ commentHtml }}
        </div>
    {% endif %}


    {% if showAddToCartOrStock %}
        <fieldset class="{{ namespace }}grid-product__fieldset {{ fieldsetMixins }}">
            {% if showAddToCartButton %}
                <div class="{{ namespace }}grid-product__section">
                    <div class="{{ namespace }}grid-product__section-item">
                        {{ addToCartHtml }}
                    </div>
                </div>
            {% endif %}
            {% if showInStock %}
                <p class="{{ namespace }}grid-product__stock" title="{{ stockText }}">
                    {{ stockHtml }}
                </p>
            {% endif %}
            {% if showOutOfStock %}
                <p class="{{ namespace }}grid-product__stock" title="{{ stockText }}">
                    {{ stockHtml }}
                </p>
            {% endif %}
        </fieldset>
    {% endif %}


    {% if showEditOrRemoveLinks %}
        <div class="cs-grid-product__links">
            {% if editLinkHtml is defined %}
                {{ editLinkHtml }}
            {% endif %}

            {% if removeLinkHtml is defined %}
                {{ removeLinkHtml }}
            {% endif %}
        </div>
    {% endif %}


    {% if showAddons %}
        <div class="{{ namespace }}grid-product__addons">

            <div class="{{ namespace }}grid-product__section">
                <div class="{{ namespace }}grid-product__section-item">
                    {{ rating }}
                </div>
                <div class="{{ namespace }}grid-product__section-item">
                    {% if showInStock %}
                        <p class="{{ namespace }}grid-product__stock" title="{{ stockText }}">
                            {{ stockHtml }}
                        </p>
                    {% endif %}
                    {% if showOutOfStock %}
                        <p class="{{ namespace }}grid-product__stock" title="{{ stockText }}">
                            {{ stockHtml }}
                        </p>
                    {% endif %}
                </div>
            </div>

            {% if showAddToWishlistLink or showAddToCompareLink %}

                <ul class="{{ namespace }}grid-product__section {{ addLinksMixins }}" {{ addLinksAttributes }}>
                    {% if showAddToWishlistLink %}
                        <li class="{{ namespace }}links-block-addto__item">
                        </li>
                    {% endif %}
                    {% if showAddToCompareLink %}
                        <li class="{{ namespace }}links-block-addto__item">
                        </li>
                    {% endif %}
                </ul>
            {% endif %}

        </div>

    {% endif %}


    {% if showRemoveButton %}
        <div class="{{ namespace }}grid-product__remove">
            {{ removeButtonHtml }}
        </div>
    {% endif %}

</div>
