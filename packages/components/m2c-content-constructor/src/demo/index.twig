<!doctype html>
<html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>M2C Content Constructor component demo</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="../m2c-content-constructor.css">
    </head>
    <body>
        <h1>M2C Content Constructor Component Demo</h1>
        <m2c-content-constructor></m2c-content-constructor>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/require.js/2.2.0/require.js"></script>
        <script>
            require.config({
                'baseUrl': '../',
                'paths': {
                    'Vue': '//cdnjs.cloudflare.com/ajax/libs/vue/1.0.26/vue',
                    'm2CContentConstructor': 'm2c-content-constructor'
                }
            });
            // Initialize content constructor using AMD.
            require( [ 'Vue', 'm2CContentConstructor' ], function( Vue, m2CContentConstructor ) {
                new Vue( {
                    el: 'body',
                    components: {
                        'm2c-content-constructor': m2CContentConstructor
                    }
                } );
            } );
        </script>
    </body>
</html>
