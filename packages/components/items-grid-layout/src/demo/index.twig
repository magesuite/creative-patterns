<html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>items-grid-layout component demo</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
        <link rel="stylesheet" href="./index.css">
    </head>
    <body>
        <h1>items-grid-layout Component Demo</h1>

        <div>
            <h4>Standard grid</h4>

            {% set content %}
                {% include locate( 'grid-product/grid-product.twig' ) with {
                    namespace: 'cs-',
                    showWrapper: false,
                    url: '#',
                    image: {
                        src: '../images/product3.jpg',
                        alt: 'Karissa V-Neck Tee - product image',
                    },
                    name: 'Karissa V-Neck Tee',
                    price: {
                        content: '<div class="price-box price-final_price" data-role="priceBox" data-product-id="1956"><span class="price-container price-final_price tax weee"><span id="product-price-1956" data-price-amount="50" data-price-type="finalPrice" class="price-wrapper "><span class="price">$50.00</span></span></span></div>'
                    },
                    swatches: {
                        asAddon: false,
                        mix: 'cs-grid-product__swatches--color-only',
                        content: '<div class="cs-swatches cs-swatches--mini cs-swatches--color-only cs-swatches--static" data-role="swatch-options"><div class="cs-swatches__attribute color" attribute-code="color" attribute-id="93" option-selected="57"><span class="cs-swatches__attribute-label">Color</span><span class="cs-swatches__attribute-selected">Purple</span><div class="cs-swatches__list clearfix"><div class="cs-swatches__swatch color" option-type="1" option-id="57" option-label="Purple" option-tooltip-thumb="" option-tooltip-value="#ef3dff"  style="background: #ef3dff no-repeat center; background-size: initial;"></div><div class="cs-swatches__swatch color" option-type="1" option-id="59" option-label="White" option-tooltip-thumb="" option-tooltip-value="#ffffff" " style="background: #ffffff no-repeat center; background-size: initial;"></div><div class="cs-swatches__swatch color disabled" option-type="1" option-id="60" option-label="Yellow" option-tooltip-thumb="" option-tooltip-value="#ffd500" " style="background: #ffd500 no-repeat center; background-size: initial;"></div></div></div><div class="cs-swatches__attribute size" attribute-code="size" attribute-id="142"><span class="cs-swatches__attribute-label">Size</span><span class="cs-swatches__attribute-selected"></span><div class="cs-swatches__list clearfix"><div class="cs-swatches__swatch text" option-type="0" option-id="167" option-label="XS" option-tooltip-thumb="" option-tooltip-value="XS">XS</div><div class="cs-swatches__swatch text" option-type="0" option-id="168" option-label="S" option-tooltip-thumb="" option-tooltip-value="S">S</div><div class="cs-swatches__swatch text" option-type="0" option-id="169" option-label="M" option-tooltip-thumb="" option-tooltip-value="M">M</div><div class="cs-swatches__swatch text" option-type="0" option-id="170" option-label="L" option-tooltip-thumb="" option-tooltip-value="L">L</div><div class="cs-swatches__swatch text disabled" option-type="0" option-id="171" option-label="XL" option-tooltip-thumb="" option-tooltip-value="XL" disabled="disabled">Extra Large</div></div></div></div>'
                    }
                } %}
            {% endset %}

            {% set items = [
                {
                    mix: 'cs-grid-product',
                    content: content
                }
            ] %}

            {% for i in 0..10 %}

                {% if i is odd %}

                    {% set content %}
                        {% include locate( 'grid-product/grid-product.twig' ) with {
                            namespace: 'cs-',
                            showWrapper: false,
                            url: '#',
                            image: {
                                src: '../images/product.jpg',
                                alt: 'Karissa V-Neck Tee - product image',
                            },
                            name: 'Karissa V-Neck Tee',
                            price: {
                                content: '<div class="price-box price-final_price" data-role="priceBox" data-product-id="1956"><span class="price-container price-final_price tax weee"><span id="product-price-1956" data-price-amount="50" data-price-type="finalPrice" class="price-wrapper "><span class="price">$50.00</span></span></span></div>'
                            },
                            swatches: {
                                asAddon: false,
                                mix: 'cs-grid-product__swatches--color-only',
                                content: '<div class="cs-swatches cs-swatches--mini cs-swatches--color-only cs-swatches--static" data-role="swatch-options"><div class="cs-swatches__attribute color" attribute-code="color" attribute-id="93" option-selected="57"><span class="cs-swatches__attribute-label">Color</span><span class="cs-swatches__attribute-selected">Purple</span><div class="cs-swatches__list clearfix"><div class="cs-swatches__swatch color" option-type="1" option-id="57" option-label="Purple" option-tooltip-thumb="" option-tooltip-value="#ef3dff"  style="background: #ef3dff no-repeat center; background-size: initial;"></div><div class="cs-swatches__swatch color" option-type="1" option-id="59" option-label="White" option-tooltip-thumb="" option-tooltip-value="#ffffff" " style="background: #ffffff no-repeat center; background-size: initial;"></div><div class="cs-swatches__swatch color disabled" option-type="1" option-id="60" option-label="Yellow" option-tooltip-thumb="" option-tooltip-value="#ffd500" " style="background: #ffd500 no-repeat center; background-size: initial;"></div></div></div><div class="cs-swatches__attribute size" attribute-code="size" attribute-id="142"><span class="cs-swatches__attribute-label">Size</span><span class="cs-swatches__attribute-selected"></span><div class="cs-swatches__list clearfix"><div class="cs-swatches__swatch text" option-type="0" option-id="167" option-label="XS" option-tooltip-thumb="" option-tooltip-value="XS">XS</div><div class="cs-swatches__swatch text" option-type="0" option-id="168" option-label="S" option-tooltip-thumb="" option-tooltip-value="S">S</div><div class="cs-swatches__swatch text" option-type="0" option-id="169" option-label="M" option-tooltip-thumb="" option-tooltip-value="M">M</div><div class="cs-swatches__swatch text" option-type="0" option-id="170" option-label="L" option-tooltip-thumb="" option-tooltip-value="L">L</div><div class="cs-swatches__swatch text disabled" option-type="0" option-id="171" option-label="XL" option-tooltip-thumb="" option-tooltip-value="XL" disabled="disabled">Extra Large</div></div></div></div>'
                            }
                        } %}
                    {% endset %}

                {% else %}

                    {% set content %}
                        {% include locate( 'grid-product/grid-product.twig' ) with {
                            namespace: 'cs-',
                            showWrapper: false,
                            url: '#',
                            image: {
                                src: '../images/product2.jpg',
                                alt: 'Karissa V-Neck Tee - product image',
                            },
                            name: 'Very long product name that should be truncated after 2 lines of length bla bla blablblablabl bal blabl',
                            price: {
                                content: '<div class="price-box price-final_price" data-role="priceBox" data-product-id="1824"><span class="special-price"><span class="price-container price-final_price tax weee"><span class="price-label">Special Price</span><span id="product-price-1824" data-price-amount="31.2" data-price-type="finalPrice" class="price-wrapper "><span class="price">$31.20</span></span></span></span><span class="old-price"><span class="price-container price-final_price tax weee"><span class="price-label">Regular Price</span><span id="old-price-1824" data-price-amount="39" data-price-type="oldPrice" class="price-wrapper "><span class="price">$39.00</span></span></span></span></div>'
                            },
                            addons: {
                                show: false,
                                mix: ''
                            },
                            rating: {
                                maxStars: 5,
                                activeStars: 4.5,
                                text: ''
                            },
                            stock: {
                                showInStock: true,
                                inStockContent: 'In stock'
                            },
                        } %}
                    {% endset %}

                {% endif %}

                {% set items = items|merge( [ {
                    mix: 'cs-grid-product',
                    content: content
                } ] ) %}

            {% endfor %}

            {% include locate('items-grid-layout/items-grid-layout.twig') with {
                namespace: 'cs-',
                items: items
            } %}

        </div>

        <script src="../../src/vendors/css-grid-polyfill/css-polyfills.js"></script>
        <script src="../items-grid-layout.js"></script>
    </body>
</html>
