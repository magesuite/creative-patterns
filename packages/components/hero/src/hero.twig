<div class="{{ namespace }}hero {{ mix }}">
    <div class="{{ namespace }}hero__carousel">
        <div class="{{ namespace }}hero__wrapper">
            <ul class="{{ namespace }}hero__slides">

                {% for item in items %}
                    <li class="{{ namespace }}hero__slide">
                        <figure class="{{ namespace }}hero__figure">
                            <img class="{{ namespace }}hero__image" src="{{ item.image }}" alt="Hero image">
                        </figure>

                        <div class="{{ namespace }}hero__content-wrapper {{ namespace }}hero__content-wrapper--{{ item.displayVariant }}">
                            <div class="{{ namespace }}hero__content">
                                {% if item.headline %}
                                    <h2 class="{{ namespace }}hero__headline">{{ item.headline }}</h2>
                                {% endif %}

                                {% if item.paragraph %}
                                    <p class="{{ namespace }}hero__text">{{ item.paragraph|raw }}</p>
                                {% endif %}

                                {% if item.ctaTarget and item.ctaLabel %}
                                    <div class="{{ namespace }}hero__cta">
                                        <a href="{{ item.ctaTarget }}" class="{{ button.classes }}">{{ item.ctaLabel|striptags }}
                                            {% if button.arrow is defined and button.arrow %}
                                                <svg class="{{ button.arrowClass }}">
                                                    <use xlink:href="{{ asset( 'images/sprites.svg#arrow_next' ) }}"></use>                                                                </svg>
                                            {% endif %}
                                        </a>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </li>
                {% endfor %}

            </ul>
        </div>

        <button class="{{ namespace }}hero__nav {{ namespace }}hero__nav--large {{ namespace }}hero__nav--prev" type="button">
            <svg class="{{ namespace }}hero__nav-icon">
                <use xlink:href="{{ asset( 'images/sprites.svg#icon_arrow-left' ) }}"></use>
            </svg>
        </button>
        <button class="{{ namespace }}hero__nav {{ namespace }}hero__nav--large {{ namespace }}hero__nav--next" type="button">
            <svg class="{{ namespace }}hero__nav-icon">
                <use xlink:href="{{ asset( 'images/sprites.svg#icon_arrow-right' ) }}"></use>
            </svg>
        </button>
    </div>

    <ul class="{{ namespace }}hero__pagination"></ul>
</div>
