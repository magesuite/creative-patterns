<!doctype html>
<html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>qty-increment component demo</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="../qty-increment.css">
    </head>
    <body>
        <h1>qty-increment Component Demo</h1>

        {% include '../qty-increment.twig' with {
            namespace: 'cs-',
            initialValue: 1,
            maxlength: 2,
            size: 2,
            name: 'qty',
            minValue: 1,
            maxValue: 20,
            icons: {
                increment: '../images/sprites.svg#icon_plus',
                decrement: '../images/sprites.svg#icon_minus'
            }
        } %}

        <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js"></script>
        <script src="../qty-increment.js"></script>
        <script>
            new qtyIncrement( $('.cs-qty-increment') );
        </script>
    </body>
</html>
