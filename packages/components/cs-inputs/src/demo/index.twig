<!doctype html>
<html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>{{ title }}</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="../cs-inputs.css">
        <style>
            main > div { margin: 0 0 20px; }
        </style>
    </head>
    <body>
        <main>
            <h1>cs-inputs component demo</h1>

            <h3>Text inputs</h3>
            <div>
                Standard input:
                <div class="cs-input">
                    <input type="text" name="name" class="cs-input__input">
                </div>
            </div>

            <div>
                With placeholder:
                <div class="cs-input">
                    <input type="text" name="name" class="cs-input__input" placeholder="Placeholder">
                </div>
            </div>

            <div>
                Disabled with placeholder:
                <div class="cs-input">
                    <input type="text" name="name" class="cs-input__input" placeholder="Placeholder" disabled>
                </div>
            </div>

            <div>
                With label:
                <div class="cs-input">
                    <label for="input1" class="cs-input__label">Label:</label>
                    <input type="text" name="name" id="input1" class="cs-input__input">
                </div>
            </div>

            <div>
                With inline label:
                <div class="cs-input cs-input--type-inline">
                    <label for="input2" class="cs-input__label">Label:</label>
                    <input type="text" name="name" id="input2" class="cs-input__input">
                </div>
                <div class="cs-input cs-input--type-inline">
                    <label for="input3" class="cs-input__label">Multiline label example:</label>
                    <input type="text" name="name" id="input3" class="cs-input__input">
                </div>
            </div>


            <h3>Textarea</h3>
            <div>
                Standard textarea:
                <div class="cs-input">
                    <textarea name="textarea" class="cs-input__textarea"></textarea>
                </div>
            </div>

            <div>
                With placeholder:
                <div class="cs-input">
                    <textarea name="textarea" class="cs-input__textarea" placeholder="Placeholder"></textarea>
                </div>
            </div>

            <div>
                Disabled with placeholder:
                <div class="cs-input">
                    <textarea name="name" class="cs-input__textarea" placeholder="Placeholder" disabled></textarea>
                </div>
            </div>

            <div>
                With label:
                <div class="cs-input">
                    <label for="textarea1" class="cs-input__label">Label:</label>
                    <textarea name="name" id="textarea1" class="cs-input__textarea"></textarea>
                </div>
            </div>

            <div>
                With inline label:
                <div class="cs-input cs-input--type-inline">
                    <label for="textarea2" class="cs-input__label">Label:</label>
                    <textarea name="name" id="textarea2" class="cs-input__textarea"></textarea>
                </div>
            </div>


            <h3>Select</h3>
            <div>
                Standard select:
                <div class="cs-input">
                    <select name="select" class="cs-input__select">
                        <option value="1">Option 1</option>
                        <option value="2">Option 2</option>
                        <option value="3">Option 3</option>
                        <option value="4">Option 4</option>
                        <option value="5">Option 5</option>
                    </select>
                </div>
            </div>

            <div>
                Disabled:
                <div class="cs-input">
                    <select name="select" class="cs-input__select" disabled>
                        <option value="1">Option 1</option>
                        <option value="2">Option 2</option>
                        <option value="3">Option 3</option>
                        <option value="4">Option 4</option>
                        <option value="5">Option 5</option>
                    </select>
                </div>
            </div>

            <div>
                With label:
                <div class="cs-input">
                    <label for="select1" class="cs-input__label">Label:</label>
                    <select name="select" id="select1" class="cs-input__select">
                        <option value="1">Option 1</option>
                        <option value="2">Option 2</option>
                        <option value="3">Option 3</option>
                        <option value="4">Option 4</option>
                        <option value="5">Option 5</option>
                    </select>
                </div>
            </div>

            <div>
                With inline label:
                <div class="cs-input cs-input--type-inline">
                    <label for="select2" class="cs-input__label">Label:</label>
                    <select name="select" id="select2" class="cs-input__select">
                        <option value="1">Option 1</option>
                        <option value="2">Option 2</option>
                        <option value="3">Option 3</option>
                        <option value="4">Option 4</option>
                        <option value="5">Option 5</option>
                    </select>
                </div>
            </div>


            <h3>Checkbox</h3>
            <div>
                Standard checkbox:
                <div class="cs-input">
                    <label class="cs-input__label cs-input__label--type-checkbox">
                        <input type="checkbox" class="cs-input__checkbox" name="cb-name" value="0">
                        Label
                    </label>
                </div>
                <div class="cs-input">
                    <label class="cs-input__label cs-input__label--type-checkbox">
                        <input type="checkbox" class="cs-input__checkbox" name="cb-name" value="1">
                        Label
                    </label>
                </div>
            </div>

            <div>
                Disabled:
                <div class="cs-input">
                    <label class="cs-input__label cs-input__label--type-checkbox">
                        <input type="checkbox" class="cs-input__checkbox" name="cb-name" value="0" disabled>
                        Label
                    </label>
                </div>
                <div class="cs-input">
                    <label class="cs-input__label cs-input__label--type-checkbox">
                        <input type="checkbox" class="cs-input__checkbox" name="cb-name" value="1" disabled>
                        Label
                    </label>
                </div>
            </div>

        </main>
