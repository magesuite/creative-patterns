<!doctype html>
<html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>gender-detection component demo</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="index.css">
    </head>
    <body>
        {% include './header.twig' with {'current': 3} %}

        <h4>With select instead of radios</h4>
        <div class="cs-gender-detection" data-api-key="zaPowHWPadlkkzgGzg">
            <div class="cs-input | cs-gender-detection__input-wrapper">
                <label class="cs-input__label" for="firstname"><span>First Name</span></label>
                <div class="cs-input__control">
                    <input type="text" id="firstname" name="firstname" value="" title="First Name" class="cs-input__input | cs-gender-detection__source">
                </div>
            </div>
            <div class="cs-gender-detection__content">
                <div class="cs-input">
                    <select class="cs-input__select" data-gender>
                        <option>Please select...</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                </div>
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
        <script src="../gender-detection.js"></script>
        <script>
            var demo = new genderDetection( $('.cs-gender-detection') );
        </script>
    </body>
</html>
