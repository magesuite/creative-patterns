<div class="{{ namespace }}review {{ mix }}">
    <span class="{{ namespace }}review__title" itemprop="name">{{ title|raw }}</span>

    <div class="{{ namespace }}review__rating">
        {% include locate( 'star-rating/star-rating.twig' ) with {
            namespace: namespace,
            maxStars: rating.maxStars,
            activeStars: rating.activeStars,
            text: rating.text
        } %}
    </div>

    <div class="{{ namespace }}review__meta">
        <span class="{{ namespace }}review__author {{ namespace }}review__meta-item">{{ author|raw }}</span>
        <time class="{{ namespace }}review__date {{ namespace }}review__meta-item" >
            {{ date }}
        </time>
    </div>
    <p class="{{ namespace }}review__content">{{ content|raw }}</p>
</div>
