<div class="{{ namespace }}category-links {{ mix }}">
    <{{ titleTag }} class="{{ namespace }}category-links__title">
        {{ category.name }}
    </{{ titleTag }}>

    <div class="{{ namespace }}category-links__dropdown {{ namespace }}category-links-dropdown">

        <div class="{{ namespace }}category-links__subtitle | {{ namespace }}category-links-dropdown__trigger">
            {{ allProductsLabel }}

            <span class="{{ namespace }}category-links__qty">
                {{ category.qty }}
            </span>
        </div>

        <div class="{{ namespace }}category-links__list-wrapper | {{ namespace }}category-links-dropdown__content">
            <ul class="{{ namespace }}category-links__list | {{ namespace }}dropdown__content">
                {% for subcategory in subcategories %}
                    <li class="{{ namespace }}category-links__list-item">
                        <a href="{{ subcategory.href }}" class="{{ namespace }}category-links__link">
                            {{ subcategory.name }}
                            <span class="{{ namespace }}category-links__qty">
                                {{ subcategory.qty }}
                            </span>
                        </a>
                    </li>
                {% endfor %}
            </ul>

            <ul class="{{ namespace }}category-links__list-all">
                <li class="{{ namespace }}category-links__list-all-item">
                    <a href="{{ category.href }}" class="{{ namespace }}category-links__link">
                        {{ allProductsLabel }}
                        <span class="{{ namespace }}category-links__qty">
                            {{ category.qty }}
                        </span>
                    </a>
                </li>
            </ul>

        </div>
    </div>
</div>
