<a href="{{ target }}" class="{{ namespace }}button {{ mix }}">
    {{ label }}

    {% if number_of_products is not empty %}
    <span class="{{ namespace }}button__span">{{ number_of_products }}</span>
    {% endif %}

    {% if icon %}
    <svg class="{{ namespace }}button__icon">
        <use xlink:href="#{{ icon }}"></use>
    </svg>
    {% endif %}
</a>
