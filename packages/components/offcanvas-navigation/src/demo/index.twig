<!doctype html>
<html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>Offcanvas navigation component demo</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="index.css">
    </head>
    <body>
        <h1>Offcanvas navigation Component Demo</h1>
        {% embed "../../../offcanvas/src/offcanvas.twig" %}
            {% block drawer %}
                {% embed "../offcanvas-navigation.twig" %}
                    {% block list %}
                        <li class="cs-offcanvas-navigation__item">
                            <a href="cs-offcanvas-navigation__link cs-offcanvas-navigation__link--look_attention">Sign In</a>
                        </li>
                        <li class="cs-offcanvas-navigation__item">
                            <a class="cs-offcanvas-navigation__link cs-offcanvas-navigation__link--parent" href="#">Women</a>
                            <ul class="cs-offcanvas-navigation__list cs-offcanvas-navigation__list">
                                <li class="cs-offcanvas-navigation__item">
                                    <a class="cs-offcanvas-navigation__link cs-offcanvas-navigation__link--return" href="#">Women</a>
                                </li>
                                <li class="cs-offcanvas-navigation__item">
                                    <a class="cs-offcanvas-navigation__link cs-offcanvas-navigation__link" href="#">Women</a>
                                </li>
                                <li class="cs-offcanvas-navigation__item">
                                    <a class="cs-offcanvas-navigation__link cs-offcanvas-navigation__link" href="#">Men</a>
                                </li>
                                <li class="cs-offcanvas-navigation__item">
                                    <a class="cs-offcanvas-navigation__link cs-offcanvas-navigation__link" href="#">Women</a>
                                </li>
                                <li class="cs-offcanvas-navigation__item">
                                    <a class="cs-offcanvas-navigation__link cs-offcanvas-navigation__link" href="#">Women</a>
                                </li>
                                <li class="cs-offcanvas-navigation__item">
                                    <a class="cs-offcanvas-navigation__link cs-offcanvas-navigation__link" href="#">Women</a>
                                </li>
                            </ul>
                        </li>
                    {% endblock %}
                {% endembed %}
            {% endblock %}
        {% endembed %}
        <button class="cs-offcanvas-trigger">Open offcanvas</button>
        <script src="https://code.jquery.com/jquery-3.1.1.js"></script>
        <script src="../../../offcanvas/dist/offcanvas.js"></script>
        <script src="../offcanvas-navigation.js"></script>
        <script>
            new offcanvas();
            new offcanvasNavigation();
        </script>
    </body>
</html>
