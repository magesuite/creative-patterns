{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es6",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "outDir": "lib"
  },
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "!src/**/*.spec.ts",
    "node_modules/@types/**/*.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "src/components/packages-list/packages-list.ts",
    "src/components/packages-search/packages-search.ts",
    "src/library.ts",
    "src/packages-list/packages-list.ts",
    "node_modules/@types/jquery/index.d.ts",
    "node_modules/@types/vue/index.d.ts"
  ]
}
